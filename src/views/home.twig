{% extends 'layout.twig' %}

{% block content %}
	{% if username %}
		<a href="scrobble.php" class="btn btn-warning btn-md center-block col-xs-8 col-xs-pull-2 col-sm-6 col-sm-push-3">
			<span class="glyphicon glyphicon-sunglasses"></span>
			Scrobble!
		</a>
	{% else %}
		<div class="well">
			<h2>Welcome to the <strong>Open Web Scrobbler</strong>!</h2>
			<p class="text-center">You need to authorize the application to begin. This is safely done over at Last.fm</p>
			<div class="row">
				<a href="{{ lastfm_auth_link }}" class="btn btn-lg btn-info btn-login col-xs-10 col-xs-push-1 col-sm-6 col-sm-push-3 col-md-4 col-md-push-4">
					Authorize at Last.fm
					<span class="glyphicon glyphicon-chevron-right"></span>
				</a>
			</div>
		</div>
	{% endif %}
{% endblock %}